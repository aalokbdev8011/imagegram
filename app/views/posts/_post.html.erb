<div id="<%= dom_id post %>">
  <p>
    <%= image_tag(post.image, class: "img-fluid") %>
  </p>

  <p>
    <strong>Caption:</strong>
    <%= post.caption %>

    <% if params[:action] == 'index' %>
      <%= render post.comments.limit(2)  %>
      <%= link_to "Show this post", post, class: 'btn btn-primary' %>
    <% end %>
  </p>
</div>
