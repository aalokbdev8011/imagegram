<div id="<%= dom_id post %>">
  <p>
    <% if post.image.present? %>
      <%= image_tag(post.image) %>
    <% end %>
  </p>

  <p>
    <strong>Caption:</strong>
    <%= post.caption %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= "#{post.user.first_name} #{post.user.last_name}" %>
  </p>

  <%= render post.comments  %>

</div>
