<p style="color: green"><%= notice %></p>

<%= render @post %>

<div class= 'row'>
  <div class= 'col-sm-1'>
    <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-primary' %>
  </div>

  <div class= 'col-sm-1'>
    <%= link_to "Back", posts_path, class: 'btn btn-primary' %>
  </div>

  <div class= 'col-sm-1'>
    <%= link_to "Destroy", @post, data: { "turbo-method": :delete }, class: 'btn btn-danger' %>
  </div>
</div>
</br>

<h3>Comments</h3>
<div class="container-fluid">
  <% @post.comments.each do |comment| %>
    <%= render comment %>
  <% end %>
</div>
</br>

<h3>Add a Comment</h3>
<div class="mb-3">
  <%= form_with(model: [@post, @comment], url: post_comments_path(@post), method: :post) do |form| %>
    <%= form.hidden_field :user_id, value: current_user.id %>

    <%= form.text_area :content, placeholder: 'Your comment...', class: "form-control" %>
    <%= form.submit 'Add Comment', class: 'btn btn-primary' %>
  <% end %>
</div>